<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cambia el color de fondo según tus preferencias -->
            <corners android:radius="30dp" /> <!-- Ajusta el radio para obtener el grado de redondez deseado -->
        </shape>
    </item>
    <stroke
        android:width="3dp"
        android:color="#F1E9E9" />
    <item android:drawable="@drawable/bg_desk" /> <!-- Cambia aquí para establecer la imagen -->
</layer-list>